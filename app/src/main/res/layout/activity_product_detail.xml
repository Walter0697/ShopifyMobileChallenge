<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.testing.shopifychallenge.ProductDetailActivity">

    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/loading"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="3dp" />

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/detailImage"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/detailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="14dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/detailPrice"
        app:layout_constraintLeft_toLeftOf="@+id/detailTitle" />

    <TextView
        android:id="@+id/detailVendor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vendor"
        android:textSize="12dp"
        android:textColor="@color/colorGrey"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailTitle"
        app:layout_constraintLeft_toLeftOf="@+id/detailTitle" />

    <TextView
        android:id="@+id/detailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailVendor"
        app:layout_constraintLeft_toLeftOf="@+id/detailVendor" />

    <TextView
        android:id="@+id/detailType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/detailDescription"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/detailPublishedGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="publishedGroup"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/detailType"
        app:layout_constraintLeft_toLeftOf="@+id/detailType" />

    <TextView
        android:id="@+id/detailHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="handle"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/detailPublishedGroup"
        app:layout_constraintLeft_toLeftOf="@+id/detailPublishedGroup" />

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/detailTags"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/tagText"
        app:layout_constraintLeft_toLeftOf="@+id/detailHandle"
        android:layout_marginLeft="-8dp" />

    <TextView
        android:id="@+id/detailCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="created at"
        android:textColor="@color/colorGrey"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/detailTags"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/detailUpdatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="updated at"
        android:textColor="@color/colorGrey"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailCreatedAt"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags:"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/detailHandle"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/detailHandle" />
</android.support.constraint.ConstraintLayout>
